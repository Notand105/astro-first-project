---
import projects from '../../config/projects.json'
---
<h2 class="font-bold text-5xl mt-5">Projects</h2>

{
    projects.map((project)=>(
        <div class="flex-col flex">
            <h2 class="font-bold text-2xl my-4 text-center md:text-left" >{project.title}</h2>    
            <p>{project.description}</p>
        </div>
    ))
}